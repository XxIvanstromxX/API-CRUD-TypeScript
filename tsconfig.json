{
  "compilerOptions": {
    "module": "es2022",
    "target": "esnext",
    // For nodejs:
    "lib": ["esnext"],
    "types": ["node"],

    // Recommended Options
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,

    // directory settings
    "rootDir": "./src",
    "outDir": "./dist",
    "paths": {
      "@/*": ["./src/*"],
      "@routes/*": ["./src/routes/*"],
      "@controllers/*" : ["./src/controllers/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules","dist"]
}
